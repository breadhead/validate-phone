{
  "name": "@breadhead/validate-phone",
  "version": "0.1.0",
  "main": "dist/index.js",
  "repository": "git@github.com:breadhead/validate-phone.git",
  "author": "Igor Kamyshev <igor@kamyshev.me>",
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "prepare": "yarn build",
    "ci": "yarn types && yarn test && yarn lint",
    "test": "jest",
    "lint": "tslint {lib}/**/*.ts -c tslint.json",
    "types": "tsc --noEmit",
    "pretty": "prettier --write \"lib/**/*.ts\"",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.0",
    "@commitlint/config-conventional": "^7.5.0",
    "@solid-soda/tslint-config": "^2.5.3",
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.21",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "standard-version": "^4.4.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test && yarn types",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "yarn pretty",
      "yarn lint",
      "git add"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
